<style>
  @keyframes footerFadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes floatGentle {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-3px);
    }
  }

  .footer-social-icon {
    animation: footerFadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .footer-quote {
    animation: footerFadeInUp 0.8s ease-out 0.4s forwards;
    opacity: 0;
  }

  .footer-copyright {
    animation: footerFadeInUp 0.6s ease-out 0.6s forwards;
    opacity: 0;
  }

  .footer-social-icon:hover {
    animation: footerFadeInUp 0.6s ease-out forwards, floatGentle 2s ease-in-out infinite;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .footer-social-icon,
    .footer-quote,
    .footer-copyright {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
