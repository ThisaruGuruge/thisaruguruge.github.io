<footer class="py-12 mt-12 border-t border-gray-200/20 bg-gradient-to-t from-background-section/30 to-background">
  <div class="container">
    <div class="flex flex-col items-center space-y-6">
      <div class="flex space-x-6 footer-social-links">
        {socialLinks.map((link, index) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text hover:text-accent-cyan transition-all duration-300 hover:scale-125 hover:-translate-y-1 footer-social-icon"
            style={`animation-delay: ${index * 0.1}s;`}
            aria-label={`Follow Thisaru on ${link.name}`}
          >
            <Fragment set:html={link.icon} />
          </a>
        ))}
      </div>
      <blockquote class="bg-accent-cyan/5 text-accent-cyan px-6 py-3 rounded-lg text-lg font-medium mb-2 text-center max-w-xl mx-auto shadow-lg border border-accent-cyan/20 footer-quote hover:shadow-xl hover:scale-105 transition-all duration-300">
        Reality is the Fantasy We Choose to Believe!
      </blockquote>
      <p class="text-sm text-text-muted footer-copyright">
        Â© {new Date().getFullYear()} Thisaru Guruge. All rights reserved.
      </p>
