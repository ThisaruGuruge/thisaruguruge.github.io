---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PhotoGallery from '../../components/PhotoGallery.astro';

// Helper function to check if an image exists, otherwise use placeholder
const imagePath = (path: string) => {
  // In a real implementation, you would check if the file exists
  // For now, we'll use the placeholder for all images
  return '/images/gallery/placeholder.svg';
};

const hobbies = [
  {
    title: 'Wildlife Photography',
    description: 'Capturing the beauty of nature and wildlife in their natural habitats.',
    images: [
      { src: imagePath('/images/gallery/wildlife1.jpg'), alt: 'Wildlife photography 1', caption: 'Elephant at Yala National Park' },
      { src: imagePath('/images/gallery/wildlife2.jpg'), alt: 'Wildlife photography 2', caption: 'Leopard sighting at dusk' },
      { src: imagePath('/images/gallery/wildlife3.jpg'), alt: 'Wildlife photography 3', caption: 'Peacock displaying feathers' },
      { src: imagePath('/images/gallery/wildlife4.jpg'), alt: 'Wildlife photography 4', caption: 'Birds in flight at Bundala' },
    ],
  },
  {
    title: 'Guitar',
    description: 'Playing and composing music, exploring different genres and techniques.',
    images: [
      { src: imagePath('/images/gallery/guitar1.jpg'), alt: 'Guitar playing 1', caption: 'Acoustic session' },
      { src: imagePath('/images/gallery/guitar2.jpg'), alt: 'Guitar playing 2', caption: 'Recording new compositions' },
    ],
  },
  {
    title: 'Hiking',
    description: 'Exploring trails and mountains, connecting with nature.',
    images: [
      { src: imagePath('/images/gallery/hiking1.jpg'), alt: 'Hiking adventure 1', caption: 'Summit view at Adam\'s Peak' },
      { src: imagePath('/images/gallery/hiking2.jpg'), alt: 'Hiking adventure 2', caption: 'Horton Plains trail' },
      { src: imagePath('/images/gallery/hiking3.jpg'), alt: 'Hiking adventure 3', caption: 'Riverstone panorama' },
      { src: imagePath('/images/gallery/hiking4.jpg'), alt: 'Hiking adventure 4', caption: 'Sunrise at Ella Rock' },
    ],
  },
];
---

<Layout title="Off Duty | Thisaru" description="Photography, music, and more â€” what Thisaru explores outside code.">
  <Header />
  <main>
    <section class="py-20">
      <div class="container">
        <h1 class="heading-1 text-center mb-12">Off Duty</h1>
        <div class="space-y-20">
          {hobbies.map((hobby) => (
            <div class="space-y-6">
              <div class="text-center">
                <h2 class="heading-2 text-accent-cyan">{hobby.title}</h2>
                <p class="text-lg text-gray-300 mt-4">{hobby.description}</p>
              </div>
              <PhotoGallery images={hobby.images} columns={3} />
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
