---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Button from '../components/Button.astro';
import CauseCard from '../components/CauseCard.astro';
import { Image } from 'astro:assets';
import { getFeaturedProjects, getRecentBlogPosts, getFeaturedPhotos, getRecentCauses } from '../utils/collections';

const featuredProjects = await getFeaturedProjects();
const recentPosts = await getRecentBlogPosts(3);
const featuredPhotos = await getFeaturedPhotos(4);
const recentCauses = await getRecentCauses(3);
---

<Layout title="Home | Thisaru Guruge" description="The personal website of Thisaru â€” software engineer, musician, wildlife photographer, environmentalist, and writer.">
	<Header />
	<main id="main-content" role="main" aria-label="Main content">
		<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
			<!-- Background Elements -->
			<div class="absolute inset-0 hero-bg-base"></div>
			<div class="absolute inset-0 hero-bg-overlay"></div>
			<div class="absolute inset-0 bg-gradient-to-br from-accent-cyan/5 via-transparent to-accent-orange/5"></div>

			<!-- Floating Elements -->
			<div class="absolute top-20 left-10 w-72 h-72 bg-accent-cyan/5 rounded-full blur-3xl animate-pulse floating-orb-1"></div>
			<div class="absolute bottom-20 right-10 w-96 h-96 bg-accent-orange/5 rounded-full blur-3xl animate-pulse floating-orb-2"></div>

			<div class="container relative z-10 py-20">
				<div class="grid lg:grid-cols-2 gap-16 lg:items-start">
					<!-- Left Column - Content -->
					<div class="space-y-8 text-center lg:text-left lg:pt-4">
						<!-- Greeting & Name -->
						<div class="space-y-4 hero-text-content">
							<div class="hero-greeting">
								<span class="text-accent-orange font-medium text-lg tracking-wide uppercase opacity-80">HELLO, I'M</span>
							</div>
							<h1 class="hero-name">
								<span class="text-6xl md:text-7xl lg:text-8xl font-bold text-text leading-tight">
									Thisaru
								</span>
								<div class="text-2xl md:text-3xl lg:text-4xl font-light text-text-muted mt-2 hero-subtitle">
									From Code and Chords to Conservation
								</div>
							</h1>
						</div>

						<!-- Description -->
						<div class="space-y-6 hero-description max-w-xl mx-auto lg:mx-0">
							<p class="text-lg md:text-xl leading-relaxed text-text-muted hero-desc-1">
								I craft software, make music, capture moments through photography, and stand for the planet.
							</p>
							<p class="text-base text-text-muted/80 hero-desc-2">
								From distributed systems to climate action; I look for patterns in code, communities, and ecosystems.
							</p>
						</div>

						<!-- Call to Action Buttons -->
						<div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start hero-cta">
							<a
								href="/thoughts/"
								class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-background bg-accent-cyan rounded-2xl overflow-hidden transition-all duration-300 hover:shadow-2xl hover:shadow-accent-cyan/25 hover:scale-105 hover:ring-2 hover:ring-accent-cyan/50 hover:ring-offset-2 hover:ring-offset-background hero-btn-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-cyan focus-visible:ring-offset-2 focus-visible:ring-offset-background"
							>
								<span class="relative z-10 flex items-center gap-2">
									<span>Read My Thoughts</span>
									<svg class="w-5 h-5 transition-transform group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
									</svg>
								</span>
								<div class="absolute inset-0 bg-gradient-to-r from-accent-cyan to-accent-cyan/90 group-hover:from-accent-cyan/90 group-hover:to-accent-cyan transition-all duration-300"></div>
							</a>

							<a
								href="/projects/"
								class="group inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-text border-2 border-text/20 rounded-2xl transition-all duration-300 hover:border-accent-orange hover:text-accent-orange hover:shadow-lg hero-btn-secondary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-orange focus-visible:ring-offset-2 focus-visible:ring-offset-background"
							>
								<span class="flex items-center gap-2">
									<span>View My Work</span>
									<svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
									</svg>
								</span>
							</a>
						</div>

						<!-- Quick Links -->
						<div class="flex justify-center lg:justify-start gap-6 pt-4 hero-links">
							<a href="https://github.com/ThisaruGuruge" target="_blank" rel="noopener" class="text-text/60 hover:text-accent-cyan transition-all duration-300 hover:scale-110 transform focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-cyan focus-visible:ring-offset-2 focus-visible:ring-offset-background rounded-lg p-2">
								<span class="sr-only">GitHub</span>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
								</svg>
							</a>
							<a href="https://linkedin.com/in/thisaruguruge" target="_blank" rel="noopener" class="text-text/60 hover:text-accent-cyan transition-all duration-300 hover:scale-110 transform focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-cyan focus-visible:ring-offset-2 focus-visible:ring-offset-background rounded-lg p-2">
								<span class="sr-only">LinkedIn</span>
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
							<a href="mailto:hello@thisaru.me" class="text-text/60 hover:text-accent-orange transition-all duration-300 hover:scale-110 transform focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent-orange focus-visible:ring-offset-2 focus-visible:ring-offset-background rounded-lg p-2">
								<span class="sr-only">Email</span>
								<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
								</svg>
							</a>
						</div>
					</div>

					<!-- Right Column - Visual Element -->
					<div class="flex justify-center lg:justify-end">
						<div class="relative hero-visual">
							<!-- Main Image -->
							<div class="relative w-80 h-80 md:w-96 md:h-96 hero-image-wrapper">
								<div class="absolute inset-0 bg-gradient-to-br from-accent-cyan/20 to-accent-orange/20 rounded-3xl rotate-6 hero-image-bg"></div>
								<div class="absolute inset-0 bg-gradient-to-tl from-accent-orange/10 to-accent-cyan/10 rounded-3xl -rotate-6 hero-image-bg-2"></div>
								<div class="relative z-10 w-full h-full rounded-3xl overflow-hidden hero-image-container border border-gray-200/20">
									<Image
										src="/images/profile/profile.webp"
										alt="Thisaru Guruge - Thinker"
										class="object-cover w-full h-full hero-image"
										width={400}
										height={400}
										loading="eager"
										fetchpriority="high"
									/>
								</div>
							</div>

							<!-- Floating Icons -->
							<div class="absolute -top-4 -right-4 w-16 h-16 bg-accent-cyan/10 rounded-2xl flex items-center justify-center backdrop-blur-sm border border-accent-cyan/20 hero-icon-1">
								<svg class="w-8 h-8 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
								</svg>
							</div>
							<div class="absolute -bottom-4 -left-4 w-16 h-16 bg-accent-orange/10 rounded-2xl flex items-center justify-center backdrop-blur-sm border border-accent-orange/20 hero-icon-2">
								<svg class="w-8 h-8 text-accent-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
								</svg>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="py-20 bg-background-section section-fade-in" aria-labelledby="featured-projects-heading">
			<div class="container">
				<h2 id="featured-projects-heading" class="heading-2 text-center mb-12">Featured Projects</h2>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-fade-in-stagger">
					{featuredProjects.length === 0 ? (
						<p class="col-span-full text-center text-text-muted">No featured projects yet.</p>
					) : (
						featuredProjects.map((project, index) => (
							<div class="scroll-fade-in-up" style={`animation-delay: ${index * 0.1}s;`}>
								<ProjectCard {...project.data} />
							</div>
						))
					)}
				</div>
				<div class="text-center mt-12">
					<a
						href="/projects/"
						class="inline-flex items-center px-6 py-3 rounded-lg border border-accent-orange text-accent-orange font-medium hover:bg-accent-orange hover:text-background transition-all duration-300 hover:scale-105 hover:shadow-lg scroll-fade-in"
					>
						View All Projects
					</a>
				</div>
			</div>
		</section>

		<!-- Recent Thoughts Section -->
		<section class="py-20 section-fade-in" aria-labelledby="recent-thoughts-heading">
			<div class="container">
				<div class="text-center mb-12">
					<h2 id="recent-thoughts-heading" class="heading-2 mb-4">Latest Thoughts</h2>
					<p class="text-text-muted text-lg max-w-2xl mx-auto">
						Exploring technology, cinema, philosophy, and the spaces in between
					</p>
				</div>

				{recentPosts.length > 0 && (
					<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
						{recentPosts.map((post, index) => (
							<article class="group scroll-fade-in-up bg-background-card rounded-xl overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-200/20 hover:border-accent-cyan/30" style={`animation-delay: ${index * 0.1}s;`}>
								<a href={`/thoughts/${post.slug}/`} class="block">
									{post.data.image && (
										<div class="aspect-[16/10] relative overflow-hidden">
											<img
												src={post.data.image}
												alt={post.data.imageAltText || post.data.title}
												class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-500"
											/>
											<div class="absolute inset-0 bg-gradient-to-t from-background/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
										</div>
									)}
									<div class="p-6">
										<div class="flex items-center gap-2 text-sm text-text-muted mb-3">
											<time datetime={post.data.pubDate.toISOString()}>
												{post.data.pubDate.toLocaleDateString('en-US', {
													year: 'numeric',
													month: 'short',
													day: 'numeric',
												})}
											</time>
											{post.data.tags && post.data.tags.length > 0 && (
												<>
													<span>â€¢</span>
													<span class="text-accent-orange">{post.data.tags[0]}</span>
												</>
											)}
										</div>
										<h3 class="text-xl font-bold text-text group-hover:text-accent-cyan transition-colors duration-300 mb-2">
											{post.data.title}
										</h3>
										<p class="text-text-muted line-clamp-3 leading-relaxed">
											{post.data.description}
										</p>
									</div>
								</a>
							</article>
						))}
					</div>
				)}

				<div class="text-center">
					<a
						href="/thoughts/"
						class="inline-flex items-center px-6 py-3 rounded-lg border border-accent-cyan text-accent-cyan font-medium hover:bg-accent-cyan hover:text-background transition-all duration-300 hover:scale-105 hover:shadow-lg"
					>
						<span>Read All Posts</span>
						<svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
						</svg>
					</a>
				</div>
			</div>
		</section>

		<!-- Photography Preview Section -->
		{featuredPhotos.length > 0 && (
			<section class="py-20 bg-background-section section-fade-in" aria-labelledby="photography-heading">
				<div class="container">
					<div class="text-center mb-12">
						<h2 id="photography-heading" class="heading-2 mb-4">Photography</h2>
						<p class="text-text-muted text-lg max-w-2xl mx-auto">
							Capturing the beauty of Sri Lankan wildlife and landscapes through my lens
						</p>
					</div>

					<div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-12">
						{featuredPhotos.map((photo, index) => (
							<div class="group relative aspect-square rounded-xl overflow-hidden scroll-fade-in-up" style={`animation-delay: ${index * 0.1}s;`}>
								<img
									src={photo.data.image}
									alt={photo.data.title}
									class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-500"
								/>
								<div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
									<div class="absolute bottom-4 left-4 text-white">
										<h3 class="font-semibold text-sm">{photo.data.title}</h3>
										<p class="text-xs text-white/80 mt-1">{photo.data.caption}</p>
									</div>
								</div>
							</div>
						))}
					</div>

					<div class="text-center">
						<a
							href="/off-duty/#photography"
							class="inline-flex items-center px-6 py-3 rounded-lg border border-accent-orange text-accent-orange font-medium hover:bg-accent-orange hover:text-background transition-all duration-300 hover:scale-105 hover:shadow-lg"
						>
							<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
							<span>Explore Gallery</span>
						</a>
					</div>
				</div>
			</section>
		)}

		<!-- Off Duty Section -->
		{recentCauses.length > 0 && (
			<section class="py-20 section-fade-in" aria-labelledby="off-duty-heading">
				<div class="container">
					<div class="text-center mb-12">
						<h2 id="off-duty-heading" class="heading-2 mb-4">Off Duty</h2>
						<p class="text-text-muted text-lg max-w-2xl mx-auto">
							Organizations and causes I've been involved with over the years
						</p>
					</div>

					<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
						{recentCauses.map((cause, index) => (
							<CauseCard
								title={cause.data.title}
								position={cause.data.position}
								description={cause.data.description}
								icon={cause.data.icon}
								fromYear={cause.data.fromYear}
								toYear={cause.data.toYear}
								variant="compact"
								class="scroll-fade-in-up"
								style={`animation-delay: ${index * 0.1}s;`}
							/>
						))}
					</div>

					<div class="text-center">
						<a
							href="/off-duty/"
							class="inline-flex items-center px-6 py-3 rounded-lg border border-accent-cyan text-accent-cyan font-medium hover:bg-accent-cyan hover:text-background transition-all duration-300 hover:scale-105 hover:shadow-lg"
						>
							<span>View My Off Duty Activities</span>
							<svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
							</svg>
						</a>
					</div>
				</div>
			</section>
		)}
	</main>
	<Footer />
</Layout>

