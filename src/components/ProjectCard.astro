---
import { CSS_CLASSES } from '../constants/ui';

interface Props {
  title: string;
  description: string;
  image: string;
  tags?: string[];
  githubUrl?: string;
  demoUrl?: string;
}

const { title, description, image, tags = [], githubUrl, demoUrl } = Astro.props;
---

<article class={CSS_CLASSES.CARD.INTERACTIVE}>
  <div class="aspect-video relative">
    <img
      src={image}
      alt={title}
      class="object-cover w-full h-full"
      width="600"
      height="400"
    />
  </div>
  <div class="p-6 space-y-4">
    <h3 class={CSS_CLASSES.HEADING.H3 + ' text-text'}>{title}</h3>
    <p class="text-text-muted">{description}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class={CSS_CLASSES.TAG.DEFAULT}>
          {tag}
        </span>
      ))}
    </div>
    <div class="flex gap-4 pt-4">
      {githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text hover:text-accent-cyan transition-colors"
          aria-label={`View ${title} on GitHub`}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
        </a>
      )}
      {demoUrl && (
        <a
          href={demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text hover:text-accent-orange transition-colors"
          aria-label={`View ${title} demo`}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
            <polyline points="15 3 21 3 21 9" />
            <line x1="10" y1="14" x2="21" y2="3" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>
