---
interface Props {
  title: string;
  description: string;
  image?: string;
  tags?: string[];
  githubUrl?: string;
  demoUrl?: string;
  featured?: boolean;
}

const { title, description, image, tags = [], githubUrl, demoUrl, featured } = Astro.props;
---

<article class="project-card bg-background-card rounded-xl overflow-hidden hover:shadow-xl transition-all duration-300 group border border-gray-200/20 hover:border-accent-cyan/30 h-full flex flex-col">
  <div class="aspect-video relative overflow-hidden flex-shrink-0">
    <div class="absolute inset-0 bg-gradient-to-t from-background/80 to-transparent z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    <img
      src={image || '/images/gallery/placeholder.svg'}
      alt={`${title} project screenshot`}
      class="object-cover w-full h-full group-hover:scale-110 transition-transform duration-500"
      width="600"
      height="400"
      loading="lazy"
    />
    {featured && (
      <div class="absolute top-4 right-4 z-20 bg-accent-orange text-background text-xs font-bold px-2 py-1 rounded-full featured-badge">
        ‚≠ê Featured
      </div>
    )}
  </div>
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-2xl font-bold text-text group-hover:text-accent-cyan transition-colors duration-300 mb-3">{title}</h3>
    <p class="text-text-muted leading-relaxed mb-4 flex-grow">{description}</p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag, index) => (
        <span 
          class="px-3 py-1 text-sm bg-background rounded-full text-accent-cyan border border-accent-cyan/20 hover:bg-accent-cyan/10 transition-all duration-300 project-tag"
          style={`animation-delay: ${index * 0.1}s;`}
        >
          {tag}
        </span>
      ))}
    </div>
    <div class="flex gap-4 mt-auto">
      {githubUrl && (
        <a
          href={githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text hover:text-accent-cyan transition-all duration-300 hover:scale-110 hover:-translate-y-1 p-2 rounded-lg hover:bg-accent-cyan/10"
          aria-label={`View ${title} source code on GitHub`}
          title="View source code"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
        </a>
      )}
      {demoUrl && (
        <a
          href={demoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-text hover:text-accent-orange transition-all duration-300 hover:scale-110 hover:-translate-y-1 p-2 rounded-lg hover:bg-accent-orange/10"
          aria-label={`View ${title} live demo`}
          title="View live demo"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
            <polyline points="15 3 21 3 21 9" />
            <line x1="10" y1="14" x2="21" y2="3" />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>

<style>
  @keyframes tagFadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes featuredPulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .project-card:hover {
    transform: translateY(-8px);
  }

  .project-tag {
    animation: tagFadeIn 0.4s ease-out forwards;
    opacity: 0;
  }

  .featured-badge {
    animation: featuredPulse 2s ease-in-out infinite;
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .project-card,
    .project-card img,
    .project-tag,
    .featured-badge {
      animation: none;
      transform: none;
      transition: none;
    }
    
    .project-tag {
      opacity: 1;
    }
  }
</style>
